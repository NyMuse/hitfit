@using hitfit.app.Models
@using System.Collections.Generic
@using hitfit.app.Models.Dictionaries

<section id="One" class="wrapper style3">
    <div class="inner">
        <header class="align-center">
            <p>Здесь можно будет добавить статью</p>
            <h2>Статья</h2>
        </header>
    </div>
</section>

<script type="text/javascript">
      $(document).ready(function(){
        $('#droparea').droparea();
      });
</script>

<div id="main" class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="Article" asp-action="AddArticle">
        <div class="12u$(medium)" id="droparea" name="droparea" >
            <span class="image fit" style="border: thin dashed #ccc; min-height: 150px; cursor: pointer">
                @*<span id="select_img" style="position: absolute; top: 70px" align="center">Выберите изображение</span>*@
                <img alt="" id="file_preview"/>
            </span>
            
        </div>
        <input type="file" name="file" id="file" accept="image/*" style="display: none;">
        <div class="row uniform">
            <div class="12u$">
                <div class="select-wrapper">
                    <select name="category" id="category">
                        <option value="">- Категория -</option>
                        @foreach (var category in ((List<ArticleCategory>) ViewBag.ArticleCategories))
                        {
                            <option value="@category.Id">@category.Key</option>
                        }
                    </select>
                </div>
            </div>
            <div class="12u$">
                <textarea name="articleTitle" id="title" placeholder="Заголовок статьи" rows="1"></textarea>
            </div>
            <div class="12u">
                <textarea name="articleContent" id="content" rows="10" placeholder="Тест статьи" autofocus style="min-height: 100px;"></textarea>
            </div>
            
            <div class="row uniform">
                <div class="12u">
                    <input type="checkbox" id="publish" name="publish" value="true">
                    <label for="publish">Опубликовать статью</label>
                </div>
                <div class="6u$ 12u$(xsmall)">
                    <input class="button" type="submit" value="Добавить"/>
                </div>
            </div>
            
        </div>
    </form>
</div>