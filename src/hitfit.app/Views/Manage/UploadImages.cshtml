
@{
    Layout = null;
}

<form method="post" enctype="multipart/form-data" asp-controller="Manage" asp-action="UploadImages">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="images" multiple accept="image/*"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>